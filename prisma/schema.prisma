generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  fullName    String
  password    String?
  course      Int
  facebook    String       @unique
  email       String       @unique
  phone       String       @unique
  image       String?
  acceptFace  Boolean      @default(false)
  isCheckin   Boolean      @default(false)
  role        Role         @default(USER)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  checkinType CheckinType?
  mail        Mail[]

  @@map("users")
}

model Mail {
  id        String     @id @default(uuid())
  user      User       @relation(fields: [userId], references: [id])
  userId    String    
  reason    String?
  status    MailStatus
  type      MailType   @default(SIGNUP)

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  @@map("mails")
}

enum Role {
  USER
  ADMIN
}

enum CheckinType {
  QR
  Face
  PhoneOrEmail
}

enum MailType {
  SIGNUP
  FACE
}

enum MailStatus {
  PENDING
  SUCCESS
  ERROR
}
